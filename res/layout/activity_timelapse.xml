<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <FrameLayout android:id="@+id/listFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="#050505"
        android:padding="10dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:onClick="soundOnOff"
            android:src="@drawable/super1_icon_menu"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/super1_icon_music"
            android:onClick="sampleOnOff"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_export"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="Export sequence"
            android:background="@android:color/transparent"
            android:src="@drawable/super1_icon_export"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="Export sequence"
            android:background="@android:color/transparent"
            android:src="@drawable/super1_icon_retour"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

    </LinearLayout>

</RelativeLayout>