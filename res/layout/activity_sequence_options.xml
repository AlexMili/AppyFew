<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    tools:context=".SequenceOptionsActivity" >

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/SequenceOptionsTitle"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/SequenceOptionsDate"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ReplayButton"
            style="@style/buttonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="replay"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/ShowShoot" />

        <Button
            android:id="@+id/ReshootButton"
            style="@style/buttonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="startRecorder"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/RestartShoot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >

            <Button
                android:id="@+id/ValidateButton"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:onClick="validate"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@drawable/ico_pouce_up" />

            <Button
                android:id="@+id/CancelButton"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:onClick="cancel"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@drawable/ico_pouce_down" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>