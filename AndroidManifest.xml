<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.superone.superone"
    android:versionCode="3"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:name="com.superone.superone.Super1"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.superone.superone.activities.Activity_splashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.superone.superone.activities.Activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".old_Activity_recorder"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_recorder" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.growup.growup.MainActivity" />
        </activity>
        <activity
            android:name="com.superone.superone.activities.Activity_addRecord"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_sequence_options"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.Activity_player"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_player" >
        </activity>
        <activity
            android:name="com.superone.superone.activities.Activity_timelapse"
            android:label="@string/title_activity_timelapse"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.superone.superone.activities.Activity_new"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
    </application>


</manifest>