<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#444"
        android:layout_marginBottom="0.5dp"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#32333a">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="53dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutColor"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#51a351"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_alignParentLeft="true">

            <!--<ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#777" />-->
            <TextView
                android:id="@+id/txtcatname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:text="High Tech"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="58dp">
                <TextView
                    android:id="@+id/txtdisplaypname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:text="Fin dans 5h28m"
                    android:textColor="#ffffff"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView" />

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"
                     android:layout_marginRight="10dp"
                     android:textAlignment=""
                     android:layout_alignRight="@+id/txtdisplaypname"
                     android:text="Maison et Jardin"
                     android:id="@+id/txtdisplaydate"
                     android:textColor="#fff"
                     android:layout_below="@+id/txtdisplaypname"
                     android:layout_alignLeft="@+id/txtdisplaypname" />-->
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>